{
  "name": "laravel-echo-nuxt-module",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "packageManager": "pnpm@8.6.3",
  "description": "Laravel Echo module for Nuxt 3",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8.6"
  },
  "keywords": [
    "nuxt 3",
    "nuxt",
    "module",
    "nuxt-module",
    "laravel-echo",
    "echo",
    "laravel"
  ],
  "exports": {
    ".": {
      "require": "./module.cjs",
      "import": "./dist/module.mjs"
    },
    "./module": {
      "require": "./module.cjs",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "files": [
    "dist",
    "*.cjs"
  ],
  "scripts": {
    "build": "nuxt-build-module",
    "stub": "nuxt-build-module --stub",
    "dev": "nuxi dev playground",
    "prepublishOnly": "npm run build",
    "playground:build": "nuxi generate playground",
    "format": "prettier --write --cache \"./**/*.{vue,js,ts,md}\"",
    "format:check": "prettier --check \"./**/*.{vue,js,ts,md}\"",
    "lint": "eslint --cache \"./**/*.{vue,js,ts}\"",
    "lint:fix": "eslint --cache --fix \"./**/*.{vue,js,ts}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^3.6.0",
    "@vueuse/nuxt": "^10.2.0",
    "defu": "^6.1.2"
  },
  "peerDependencies": {
    "laravel-echo": ">=1.15.1"
  },
  "devDependencies": {
    "@damilaredev/eslint-config": "^0.0.18",
    "@nuxt/module-builder": "^0.4.0",
    "@nuxt/schema": "^3.6.0",
    "@types/node": "^20.3.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "laravel-echo": "^1.15.1",
    "nuxt": "^3.6.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "vite": "^4.3.9"
  },
  "publishConfig": {
    "access": "public"
  }
}